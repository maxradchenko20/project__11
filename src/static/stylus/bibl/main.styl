.load
  display grid
  grid-template-columns repeat(2, 1fr)
  &__img
    display inline-block
    overflow hidden
    & > img
      width: 100%
      height: 100%
      transition 1s
      display block
      &:hover
        transform scale(1.2)
        cursor pointer





  &__text
    border-bottom 2px solid #D3D3D3
    padding 100px 70px 50px 50px
    & > h2
      font-size: 50px
      margin-bottom 30px
      font-weight 500
    & > p
      margin-bottom: 10px
    button:hover
      color #000000
      border 2px solid #000000
      transition .3s
      margin-left: 2px

.wrapper
  h3
    font-size: 30px
    font-weight: 500
  display grid
  grid-template-columns 1fr
  grid-template-rows repeat(2, 1fr)
  &__top
    display grid
    grid-template-columns 2fr 3fr
    grid-template-rows 400px
    border-bottom 1px solid silver
    &-left
      display inline-block
      overflow hidden
      img
        width: 100%
        height: 100%
        transition 1s
        display block
      img:hover
        transform scale(1.2)
        cursor pointer

    &-right
      padding: 100px
  &__bottom
    display grid
    grid-template-columns 3fr 2fr
    grid-template-rows 400px
    border-bottom 1px solid silver
